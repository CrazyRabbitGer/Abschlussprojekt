<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true"
	controllerName="YL_SCI_EXYardLogistics.controller.Main">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<FlexBox width="100%" justifyContent="Center">
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Tor 1" subheader="Anmeldung an Tor 1" press="press">
							<TileContent>
								<ImageContent src="sap-icon://factory"/>
							</TileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Tor 2" subheader="Anmeldung an Tor 2" press="press">
							<TileContent>
								<ImageContent src="sap-icon://factory"/>
							</TileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Tor 3" subheader="Anmeldung an Tor 3" press="press">
							<TileContent>
								<ImageContent src="sap-icon://factory"/>
							</TileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Tor 4" subheader="Anmeldung an Tor 4" press="press">
							<TileContent>
								<ImageContent src="sap-icon://factory"/>
							</TileContent>
						</GenericTile>
					</FlexBox>
					<FlexBox alignContent="SpaceAround" height="85px"/>
					<FlexBox alignContent="Center" alignItems="Center" justifyContent="Center">
						<FlexBox justifyContent="SpaceAround" direction="Column" alignContent="Center" alignItems="Center" height="auto">
							<items>
								<Label text="Username" labelFor="UsernameInput"/>
								<Input xmlns="sap.m" id="UsernameInput" type="Text" placeholder="Enter Username" fieldWidth="100%"/>
								<Label text="Password" labelFor="PasswordInput"/>
								<Input id="PasswordInput" type="Password" placeholder="Enter password" required="true"/>
								<Button text="Login" icon="sap-icon://key" press="onLogin"/>
							</items>
						</FlexBox>
					</FlexBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>